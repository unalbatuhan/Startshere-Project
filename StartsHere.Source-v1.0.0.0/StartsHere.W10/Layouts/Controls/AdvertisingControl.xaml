<UserControl
    x:Class="StartsHere.Layouts.Controls.AdvertisingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"	
    xmlns:Universal="using:Microsoft.AdMediator.Universal"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Grid Background="#dddddd" Margin="0,24,0,24">
        <Grid Margin="24,24,24,24">
            <Universal:AdMediatorControl x:Name="adControl1" Width="{x:Bind BannerWidth}" Height="{x:Bind BannerHeight}" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
